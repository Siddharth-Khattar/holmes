# Environment variables for Holmes Frontend
# Copy this file to .env.local for local development

# Database (for Better Auth session storage - matches docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/holmes

# Better Auth
BETTER_AUTH_SECRET=generate-a-secure-random-string-here
BETTER_AUTH_URL=http://localhost:3000

# Public URLs (accessible in browser)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Video URL (production: GCS bucket, local: /video.mp4)
NEXT_PUBLIC_VIDEO_URL=

# Google OAuth (get from Google Cloud Console -> APIs & Services -> Credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
